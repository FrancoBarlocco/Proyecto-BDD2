CREATE DATABASE proyectoBDD2;

USE proyectoBDD2;

-- Table Team
CREATE TABLE Team (
    TeamId INT PRIMARY KEY,
    Name VARCHAR(50),
    Flag VARCHAR(100)
);

-- Table Matches
CREATE TABLE Matches (
    MatchId INT PRIMARY KEY,
    Location VARCHAR(100),
    Date DATE,
    LocalTeamResult INT,
    VisitantTeamResult INT
);

-- Table Student
CREATE TABLE Student (
    Id INT PRIMARY KEY, cedula
    FirstName VARCHAR(50),
    LastName VARCHAR(50),
    Email VARCHAR(100),
    Password VARCHAR(100),
    Major VARCHAR(100),
    ChampionTeamId INT,
    SubChampionTeamId INT,
    FOREIGN KEY (ChampionTeamId) REFERENCES Team(TeamId),
    FOREIGN KEY (subChampionTeamId) REFERENCES Team(TeamId)
);

-- Table Administrator
CREATE TABLE Admin (
    Id INT PRIMARY KEY,
    FirstName VARCHAR(50),
    LastName VARCHAR(50),
    Email VARCHAR(100),
    Password VARCHAR(100)
);

-- Table Predicts
CREATE TABLE Predicts (
    UserId INT,
    MatchId INT,
    TeamAGoals INT,
    TeamBGoals INT,
    Score INT,
    PRIMARY KEY (UserId, MatchId),
    FOREIGN KEY (UserId) REFERENCES Student(Id),
    FOREIGN KEY (MatchId) REFERENCES Matches(MatchId)
);

